<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/defaults.xsd">
    <default>
        <whatsapp_chat>
            <general>
                <enabled>1</enabled>
                <phone_number>+1234567890</phone_number>
                <default_message>Hello! I have a question about your products.</default_message>
            </general>
            <display>
                <button_position>bottom-right</button_position>
                <button_layout>standard</button_layout>
                <show_on_mobile>1</show_on_mobile>
                <show_on_desktop>1</show_on_desktop>
            </display>
            <advanced>
                <time_restrictions>0</time_restrictions>
                <start_time>09:00</start_time>
                <end_time>18:00</end_time>
                <enable_analytics>1</enable_analytics>
            </advanced>
        </whatsapp_chat>
    </default>
</config>
