<div class="whatsapp-contacts-page">
    <div class="page-header">
        <h1><?= $block->escapeHtml(__('WhatsApp Chat Contacts')) ?></h1>
        <div class="page-actions">
            <a href="<?= $block->escapeUrl($block->getConfigUrl()) ?>" class="action-secondary">
                <?= $block->escapeHtml(__('Go to Configuration')) ?>
            </a>
        </div>
    </div>
    
    <div class="contacts-content">
        <div class="contacts-list">
            <?php $contacts = $block->getContacts(); ?>
            <?php if ($contacts && $contacts->getSize() > 0): ?>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th><?= $block->escapeHtml(__('Name')) ?></th>
                            <th><?= $block->escapeHtml(__('Phone')) ?></th>
                            <th><?= $block->escapeHtml(__('Position')) ?></th>
                            <th><?= $block->escapeHtml(__('Status')) ?></th>
                            <th><?= $block->escapeHtml(__('Actions')) ?></th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php foreach ($contacts as $contact): ?>
                            <tr>
                                <td><?= $block->escapeHtml($contact->getFirstname() . ' ' . $contact->getLastname()) ?></td>
                                <td><?= $block->escapeHtml($contact->getPhone()) ?></td>
                                <td><?= $block->escapeHtml($contact->getLabel()) ?></td>
                                <td>
                                    <span class="status-<?= $contact->getStatus() ? 'active' : 'inactive' ?>">
                                        <?= $contact->getStatus() ? __('Active') : __('Inactive') ?>
                                    </span>
                                </td>
                                <td>
                                    <a href="#" class="action-edit"><?= $block->escapeHtml(__('Edit')) ?></a>
                                </td>
                            </tr>
                        <?php endforeach; ?>
                    </tbody>
                </table>
            <?php else: ?>
                <div class="no-contacts">
                    <p><?= $block->escapeHtml(__('No contacts found. Please add contacts through the configuration.')) ?></p>
                </div>
            <?php endif; ?>
        </div>
    </div>
